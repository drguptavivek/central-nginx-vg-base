# Copy to .env and edit as needed.
#
# Image/tag to build/push
IMAGE=drguptavivek/central-nginx-vg-base
TAG=6.0.1

# Base image to extend
BASE_IMAGE=jonasal/nginx-certbot:6.0.1

# OWASP CRS tag to bake into the image
CRS_TAG=v4.21.0

# Platforms for multi-arch builds
PLATFORMS=linux/amd64,linux/arm64

# Set to 1 to push; leave 0 to load locally (single-arch) when possible.
PUSH=0

